<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PuzzleGraph.Models">
                    
    <Style TargetType="local:DataEdge">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DataEdge">
                    <Grid>
                        <Line x:Name="PART_Edge"  Stroke="Black" StrokeThickness="3"></Line>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    
</ResourceDictionary>